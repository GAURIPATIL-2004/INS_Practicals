print("Caesar Cipher Technique")

def encrypt(text, s):
    result = ""  # Initialize the result as an empty string

    for i in range(len(text)):
        char = text[i]

        # Encrypt uppercase characters
        if char.isupper():
            result += chr((ord(char) + s - 65) % 26 + 65)
        # Encrypt lowercase characters
        elif char.islower():
            result += chr((ord(char) + s - 97) % 26 + 97)
        else:
            result += char  # Add non-alphabetical characters unchanged

    return result

Text = input("Enter the plain text: ")
shift = int(input("Enter the number of keys to shift: "))

# Encrypt the text
E = encrypt(Text, shift)
print("\tYour Plain Text: \t", Text)
print("\tEncrypted Text: \t" + E)

# Decrypt the text
D = encrypt(E, (26 - shift) % 26)  # Ensure the shift is in the correct range
print("\tDecrypted Text: \t" + D)
